
Sub CustomReport_Click()
    Dim test
    test = Array("A", "B", "J", "K", "M", "O", "P", "q", "R", "U")
    customRangeReport test, "PMReport"
End Sub


Function customRangeReport(colList As Variant, rName As String)
    
    'colList is a array of the column letters you want in your report        
    'rName is the report name    
    
    Dim dt, waterMark, sheetName As String
    Dim wbNew, wbOrig As Worksheet
    Dim c1, c2, c3 As Range
    test = colList
    Dim I As Integer
    Dim fName As String
    Dim desktopFolderPath As String
    I = 1
    waterMark = "COPY_ONLY_Report_Generated_On_" & Format(CStr(Now), "mm_dd_yy_hh_mm")
        
    With ActiveSheet
        'get last col with data
        lCol = .Cells(1, Columns.Count).End(xlToLeft).Column
        'get last row with data
        lRow = .Cells(Rows.Count, 1).End(xlUp).Row
        'get sheet name
        sheetName = .Name
    End With
    
    Set wbOrig = ThisWorkbook.Worksheets(sheetName)
    
    Set wbNew = Workbooks.Add.Sheets(1)
    With wbNew
        .Name = sheetName
        With .Cells(1, 1)
            .Value = waterMark
            .Font.Bold = True
        End With
        
        For Each Item In test
            Dim x As String
            Dim q As String
            
            x = Item
            q = x & "1:" & x & lRow
            Set c1 = wbOrig.Range(q)
            Set c2 = wbNew.Cells(2, I)
            c1.Copy c2
            c2.Locked = False
            I = I + 1
            
        Next
        
        Set c3 = .Range(Cells(2, 1), Cells(2, I))
        c3.WrapText = False
        c3.Locked = False
        .Columns.AutoFit
        .Protect Password:="Spinelli36"
        
        desktopFolderPath = CreateObject("WScript.Shell").specialfolders("Desktop")
        fName = desktopFolderPath & rName & waterMark & ".xlsx"
         'SELECT ALL
         .SaveAs fName
    End With
End Function
